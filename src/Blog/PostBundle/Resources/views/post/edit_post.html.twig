{% extends 'BlogPostBundle::post_base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container">
		
		<a href="{{ path('postPage') }}" class="btn btn-info">Back to Posts!</a>
		<h3 class="page-title"> {{ title }}</h3>
		
		<br><br>
		{% if errors %}
			<ul class="alert alert-error form-error">
				{% for error in errors %}
	    			<li><span> - {{ error.message }}</span></li>
				{% endfor %}
			</ul>
    	{% endif %}
	
		<form class="form-horizontal" method="POST" action="">
			<div class="control-group">
				<label class="control-label" for="inputTitle">Title:</label>
				<div class="controls">
					<input type="text" name="title" id="inputTitle" value=" {{ post.getTitle() }} " placeholder="Title for the post" required>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="inputContent">Content:</label>
				<div class="controls">
					<textarea rows="5" cols="10" name="content" id="inputContent">{{ post.getContent() }}</textarea>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="inputAuthor">Author:</label>
				<div class="controls">
					<input type="text" name="author" id="inputAuthor" value=" {{ post.author ? post.author.getName() : 'Anonymous User' }} " placeholder="Suresh Maharjan" disabled required>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="inputStatus">Active:</label>
				<div class="controls">
					<select class="form-control" id="inputStatus" name="active" required>
						<option value="1" {{ post.getActive == '1' ? 'selected' : '' }}>Yes</option>
						<option value="0" {{ post.getActive == '0' ? 'selected' : '' }}>No</option>
					</select>
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<button type="submit" name="updatePost" class="btn">Update</button>
				</div>
			</div>
		</form>
	</div>
{% endblock %}