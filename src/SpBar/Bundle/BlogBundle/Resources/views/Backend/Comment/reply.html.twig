<form action="{{ path('sp_blog_comment_reply', {'post': post.slug}) }}" method="post">
    <div class="input-group">
        {{ form_widget(form.content, {'attr':{'placeholder': 'Type message...', 'class': 'form-control'}}) }}
        <span class="input-group-btn">
            <button type="submit" class="btn btn-primary btn-flat">Reply</button>
        </span>
    </div>
</form>