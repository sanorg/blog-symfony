
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Blog - {% block title %}Blog{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('assets/css/bootstrap-responsive.min.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet" media="screen">
    {% block css %}

    {% endblock %}
  </head>

  <body>
    <div class="page-wrapper">
      <div class="navbar navbar-inverse">
        <div class="navbar-inner">
          <div class="container-fluid">
            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="brand" href="{{ path('postPage') }}">Blog</a>

            <div class="nav-collapse collapse">
              <p class="navbar-text pull-right">
                {% if app.user and is_granted('ROLE_USER') %}
                  Logged in as 
                    {% if is_granted('ROLE_ADMIN') %}
                      Admin
                    {% elseif is_granted('ROLE_AUTHOR') %}
                      Author
                    {% else %}
                      User
                    {% endif %} |
                  <a href="{{ path('logout') }}" class="navbar-link">Logout</a>
                {% else %}
                  <a href="{{ path('fos_user_security_login') }}" class="navbar-link">Login</a>
                {% endif %}                
              </p>

              <ul class="nav">
              <li class="active"><a href="{{ path('postPage') }}">Home</a></li>
              {% if is_granted('ROLE_USER') %}
                <li><a href="{{ path('fos_user_profile_show') }}">Profile</a></li>
              {% endif %}

              {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_AUTHOR') %}
                <li><a href="{{ path('postDashPage') }}">Posts</a></li>
              {% endif %}

              {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('adminIndexPage') }}">Users</a></li>
                <li><a href="{{ path('reportPage') }}">Reports</a></li>
              {% endif %}
              

              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </div>
      </div>
      {% block body %}{% endblock %}
      <script src="{{ asset('assets/js/jquery-1.11.1.min.js') }}"></script>
      <script src=" {{ asset('assets/js/bootstrap.min.js') }}"></script>

      {% block js %}
      
      {% endblock %}
    </div>
  </body>
</html>
