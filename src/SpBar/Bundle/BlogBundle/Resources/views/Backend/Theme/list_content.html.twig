<div class="box-body">
	<table id="postList" class="table table-bordered table-hover">
		<thead>
			<tr>
				<th>S.N.</th>
				<th>Theme Name</th>
				<th>Theme Type</th>
				<th>Slug</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for theme in themes %}
		        <tr>
					<td>{{ loop.index }}</td>
					<td>{{ theme.name }} </td>
					<td>{{ theme.type }}</td>
					<td> {{ theme.slug }} </td>
					<td>
						<a href="{{ path('sp_blog_theme_edit',{'slug': theme.slug}) }}">
							<span class="glyphicon glyphicon-pencil" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Edit"></span>
						</a>
						<a href="{{ path('sp_blog_theme_delete',{'slug': theme.slug}) }}">
							<span class="glyphicon glyphicon-trash" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Delete"></span>
						</a>
					</td>
				</tr>
		    {% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<th>S.N.</th>
				<th>Theme Name</th>
				<th>Theme Type</th>
				<th>Slug</th>
				<th>Action</th>
			</tr>
		</tfoot>
	</table>
	{# knp_pagination_render(posts) #}
</div><!-- /.box-body -->